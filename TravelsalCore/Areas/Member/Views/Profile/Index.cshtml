@model TravelsalCore.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@*36.ders*@
<h1>Profil Düzenleme</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    @Html.Label("Mail")
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    @Html.Label("Şifre")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Şifre Tekrar")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    @Html.Label("Telefon Numarası")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Fotoğraf seçin</label> 
        <br />
        <input type="file" asp-for="Image"/>
    </div>
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>
