@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Destinations</h3>
<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>See on Site</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.DestinationID</td>
        <td>@item.City</td>
        <td>@item.Price</td>
        <td>@item.Capacity</td>
        <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info" style="width:100%">See on Site</a></td>
        <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger" style="width:100%">Delete</a></td>
        <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success"style="width:100%">Update</a></td>
    </tr>    
    }
</table>
<a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Create a New</a>

