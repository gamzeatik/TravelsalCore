@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.DestinationID</td>
        <td>@item.City</td>
        <td>@item.Price</td>
        <td>@item.Capacity</td>
        <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info" style="width:100%">Sitede Gör</a></td>
        <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger" style="width:100%">Sil</a></td>
        <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success"style="width:100%">Güncelle</a></td>
    </tr>    
    }
</table>
<a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası</a>

