@model TravelsalCore.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Mail Oluştur</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div><br />
    <div class="form-group">
        @Html.Label("Konu")
        <input type="text" asp-for="Subject" class="form-control" />
    </div><br />
    <div class="form-group">
    @Html.Label("Içerik")
    <textarea type="text" asp-for="Body" class="form-control"> </textarea>
    </div>
    <br />
    <button class="btn btn-primary">Mail Gönder</button>
</form>
