@model TravelsalCore.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>New Mail</h3>
<form method="post">
    <div class="form-group">
        @Html.Label("Receiver Mail")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div><br />
    <div class="form-group">
        @Html.Label("Subject")
        <input type="text" asp-for="Subject" class="form-control" />
    </div><br />
    <div class="form-group">
    @Html.Label("Body")
    <textarea type="text" asp-for="Body" class="form-control"> </textarea>
    </div>
    <br />
    <button class="btn btn-primary">Send Mail</button>
</form>
