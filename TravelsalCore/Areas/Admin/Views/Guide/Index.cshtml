@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Guide List</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image Url</th>
        <th>Name Surname</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        count = count + 1;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="70" width="70" style="border-radius:50%;"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @if (item.Status)
            {
                <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning" style="width:100%">Passive</a></td>
            }
            else
            {
                <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info" style="width:100%">Active</a></td>
            }
            <td><a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-outline-success" style="width:100%">Edit</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Add new Guide</a>
