@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcılar</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>E mail</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{
                sayac = sayac + 1;
            }
            <td>@sayac</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-outline-info" style="width:100%">Yorumlar</a></td>
            <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-outline-primary" style="width:100%">Tur Geçmişi</a></td>
            <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-outline-success" style="width:100%">Düzenle</a></td>
            <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger" style="width:100%">Sil</a></td>
        </tr>
    }
</table>
<a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>
